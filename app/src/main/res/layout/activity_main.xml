<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tala.assignmenttwo.MainActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="7"
        android:columnCount="12"
        android:orientation="horizontal"
        android:id="@+id/gridLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp">
         <EditText android:text="0"
             android:textSize="20dp"
             android:gravity="right|bottom"
             android:id="@+id/answer"
             android:layout_columnSpan="4"
             android:layout_row="0"
             android:layout_column="1"
             android:layout_width="200dp"
             android:layout_height="100dp" />

        <Button android:text="C"
            android:id="@+id/btnC"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="MC"
            android:id="@+id/btnMC"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="MR"
            android:id="@+id/btnMR"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_width="50dp"
            android:onClick="calc" />
        <Button android:text="M+"
            android:id="@+id/btnM"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="Back"
            android:id="@+id/btnBack"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_width="100dp"
            android:onClick="calc" />

        <Button android:text="N"
            android:id="@+id/btnN"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="รท"
            android:id="@+id/btnDiv"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="7"
            android:id="@+id/btn7"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="8"
            android:id="@+id/btn8"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="9"
            android:id="@+id/btn9"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="x"
            android:id="@+id/btnMul"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="4"
            android:id="@+id/btn4"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="5"
            android:id="@+id/btn5"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="6"
            android:id="@+id/btn6"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="-"
            android:id="@+id/btnMin"
            android:layout_row="4"
            android:layout_column="4"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="1"
            android:id="@+id/btn1"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="2"
            android:id="@+id/btn2"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="3"
            android:id="@+id/btn3"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="+"
            android:id="@+id/btnPls"
            android:layout_row="5"
            android:layout_column="4"
            android:layout_width="50dp"
            android:onClick="calc" />

        <Button android:text="0"
            android:id="@+id/btn0"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_width="150dp"
            android:onClick="calc" />

        <Button android:text="="
            android:id="@+id/btneql"
            android:layout_row="6"
            android:layout_column="4"
            android:layout_width="50dp"
            android:onClick="calc" />


    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calculator"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:textSize="40dp"
        android:textColor="#9f6ea8" />

</RelativeLayout>
